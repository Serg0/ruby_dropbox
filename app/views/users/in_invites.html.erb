<h1>Pending invites</h1>

<tbody>

  <div id="main">
    <% if @users.empty? %>
        <H1>You dont have any friend invites</H1>
    <% else %>
        <table>

          <% @users.each do |user| %>
              <tr>
                <td><%= user.username.blank? ? user.email : user.username %></td>

                <td><%= button_to 'Approve friend request', approve_user_path(user.id), remote: false, method: :put, data: {confirm: 'Are you sure?'} %></td>

              </tr>
          <% end %>
        </table>
    <% end %>

  </div>
</div>


</tbody>


<br>
